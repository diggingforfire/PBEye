<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PBEye.Views.LoginView">
  <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
    
    <ContentView Padding="10">
          <Entry WidthRequest="300" Placeholder="Organization" Text="{Binding Organization}"></Entry>
    </ContentView>

    <ContentView Padding="10">
    <Entry Placeholder="Username" Text="{Binding Username}"></Entry>
      </ContentView>

    <ContentView Padding="10">
    <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True"></Entry>
      </ContentView>

    <ContentView Padding="10, 15, 10, 15">
      <Button Text="Login" Command="{Binding Login}" IsEnabled="{Binding CanLogin}"></Button>
    </ContentView>

    <Label Text="An error occurred while logging in" TextColor="Red" IsVisible="{Binding LoginFailed}" HorizontalOptions="Center"/>  
    
    <ActivityIndicator Opacity="{Binding BusyOpacity}"
                   IsVisible="true"
                   IsRunning="{Binding IsBusy}"
                   Color="Black" />
    
  </StackLayout>
</ContentPage>