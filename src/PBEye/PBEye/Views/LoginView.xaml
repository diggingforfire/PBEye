<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PBEye.Views.LoginView">
  <StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
    <Entry Placeholder="Organization" Text="{Binding Organization}"></Entry>
    <Entry Placeholder="Username" Text="{Binding Username}"></Entry>
    <Entry Placeholder="Password" Text="{Binding Password}" IsPassword="True"></Entry>
    <Button Text="Login" Command="{Binding Login}"></Button>
  </StackLayout>
</ContentPage>