<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PBEye.Views.MainPage">

	<StackLayout
		Orientation="Vertical"
		VerticalOptions="CenterAndExpand">
		<Entry HorizontalOptions="Center" Placeholder="Username" ></Entry>
		<Entry HorizontalOptions="Center" Placeholder="Password" IsPassword="True"></Entry>
		<Button HorizontalOptions="Center" Text="Log in" Clicked="Login"></Button>
	</StackLayout>


</ContentPage>