<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PBEye.Views.LoginPage">

	<StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
		<Label HorizontalOptions="Center" Text="PBEye" FontSize="Large" TextColor="Gray"></Label>
		<Label HorizontalOptions="Center" Text="Visual Studio Online" TextColor="Silver"></Label>
		<Entry HorizontalOptions="Center" Placeholder="https://&lt;ORGANIZATION&gt;.visualstudio.com" x:Name="Url"></Entry>
		<Entry HorizontalOptions="Center" Placeholder="Username (irrelevant when using token)" x:Name="Username"></Entry>
		<Entry HorizontalOptions="Center" Placeholder="Password (also insert token here)" IsPassword="True" x:Name="Password"></Entry>
		<Button HorizontalOptions="Center" Text="Log in" Clicked="Login"></Button>
	</StackLayout>

</ContentPage>